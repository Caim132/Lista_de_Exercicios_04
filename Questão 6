def ordenar_decrescente(vetor):
    vetor.sort(reverse=True)

def contar_pares_impares(vetor):
    pares = 0
    impares = 0

    for numero in vetor:
        if numero % 2 == 0:
            pares += 1
        else:
            impares += 1

    return pares, impares

# Exemplo de uso:
vetor = [64, 25, 12, 22, 11]

# Ordenar o vetor em ordem decrescente
ordenar_decrescente(vetor)

# Contar números pares e ímpares no vetor ordenado
numeros_pares, numeros_impares = contar_pares_impares(vetor)

print("Vetor ordenado em ordem decrescente:", vetor)
print("Quantidade de números pares:", numeros_pares)
print("Quantidade de números ímpares:", numeros_impares)
